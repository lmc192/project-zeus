@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Project Zeus</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="deity-table">
    <table>
        <thead>
        <tr>
            <th>Deity</th>
            <th>Mythology</th>
        </tr>
        </thead>
        @foreach (var deity in @Model.Deities)
        {
            <tr>
                <td>@deity.Name</td>
                <td>@deity.Mythology.Name</td>
            </tr>
        }
    </table>
</div>